<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
		Height="250" Width="400"
        x:Class="LightImage.Interactions.Samples.Avalonia.MainWindow"
        Title="LightImage.Interactions.Samples.Avalonia">
	<Window.Styles>		
		<Style Selector="Button">
			<Setter Property="Margin" Value="5" />
			<Setter Property="HorizontalAlignment" Value="Stretch"/>
			<Setter Property="VerticalAlignment" Value="Stretch"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>
	</Window.Styles>
	<UniformGrid Rows="3" Columns="3">
		<Button x:Name="InfoButton">Info window</Button>
		<Button x:Name="YesNoButton">Yes-no choice</Button>
		<Button x:Name="FileButton">Pick a file</Button>
		<Button x:Name="FolderButton">Pick a folder</Button>
		<Button x:Name="EnumButton">Enumeration window</Button>
		<Button x:Name="NumberButton">Enter a number</Button>
		<Button x:Name="NumberRangeButton">Number with predicate</Button>
		<Button x:Name="StringButton">Enter any string</Button>
	</UniformGrid>
</Window>
